{
    "name": "lss/yadbal",
    "description": "Lightweight Database Abstraction Layer",
    "keywords": [
        "dbal",
        "mysql",
        "database"
    ],
    "homepage": "https://github.com/pavarnos/YADbal",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Steve Pavarno",
            "email": "pavarnos@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "latitude/latitude": "^4",
        "thecodingmachine/safe": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "LSS\\YADbal\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LSS\\YADbal\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "vendor/bin/phpunit"
        ],
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
    }
}
